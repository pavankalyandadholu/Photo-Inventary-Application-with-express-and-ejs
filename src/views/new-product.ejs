<h1 class=" text-center ">Add new Product </h1>

<form action="/" method="post" enctype="multipart/form-data">
 <% if(errorMessage){ %>
    <div class="alert alert-danger" role="alert">
    
     <%  errorMessage.forEach( msg=>{ %>
        
        <strong> <%= msg %></strong><br>
    <%  }) %>
    </div>
 <% } %>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" >
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Desc</label>
      <textarea type="textarea" class="form-control" id="desc" name="desc"  ></textarea>
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Price</label>
      <input type="number" class="form-control" id="price" name="price" >
    </div>
    <div class="mb-3">
      <label for="exampleInputEmail1" class="form-label">Image url</label>
      <!-- <input type="url" class="form-control" id="imageurl" name="imageurl" > -->
      <input type="file" class="form-control" id="imageurl" name="imageurl"  accept="images/*">
    </div>
  
    <button type="submit" class="btn btn-primary">Add Product</button>
  </form>